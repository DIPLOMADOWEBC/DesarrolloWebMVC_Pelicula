@model IEnumerable<Practica_No._6.Models.Producto>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <table>
        <tr>
            <th>
                Id
            </th>
            <th>
                Descripcion
            </th>
            <th>
                Tipo
            </th>
            <th>
                Precio
            </th>
            <th>
                Borrar
            </th>
            <th>
                Modificar
            </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                <td>@Html.DisplayFor(modelItem => item.Tipo)</td>
                <td>@Html.DisplayFor(modelItem => item.Precio)</td>
                <td><a href="/Producto/Borrar?cod=@item.Id">borra?</a></td>
                <td><a href="/Producto/Modificacion?cod=@item.Id">modifica?</a></td>
            </tr>
        }
    </table>
    <a href="/Producto/Grabar">Agregar</a>
</body>
</html>
